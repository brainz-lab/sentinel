<% content_for(:title) { "Projects" } %>

<div class="max-w-4xl">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-2xl font-semibold tracking-tight dm-text-primary">Projects</h1>
    <p class="mt-1 text-sm dm-text-muted">Select a project to monitor infrastructure</p>
  </div>

  <% if @projects.any? %>
    <div class="grid gap-4">
      <% @projects.each do |project| %>
        <%= link_to dashboard_project_overview_path(project),
            class: "block rounded-2xl border p-6 transition-all hover:shadow-lg hover:-translate-y-0.5 dm-card" do %>
          <div class="flex items-start justify-between">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center text-lg font-semibold dm-sentinel-gradient-bg" style="color: var(--color-sentinel);">
                <%= project.name.first.upcase %>
              </div>
              <div>
                <h3 class="font-semibold dm-text-primary"><%= project.name %></h3>
                <p class="text-sm mt-0.5 dm-text-muted">
                  <%= project.environment&.capitalize || 'Production' %>
                </p>
              </div>
            </div>

            <div class="flex items-center gap-6 text-sm">
              <div class="text-center">
                <p class="font-semibold dm-text-primary"><%= project.host_count %></p>
                <p class="dm-text-subtle">Hosts</p>
              </div>
              <div class="text-center">
                <p class="font-semibold" style="color: var(--color-success);"><%= project.online_host_count %></p>
                <p class="dm-text-subtle">Online</p>
              </div>
              <div class="text-center">
                <p class="font-semibold" style="color: var(--color-error);"><%= project.offline_host_count %></p>
                <p class="dm-text-subtle">Offline</p>
              </div>
              <svg class="w-5 h-5 dm-text-disabled" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="rounded-2xl border p-12 text-center dm-card">
      <div class="w-16 h-16 rounded-2xl mx-auto flex items-center justify-center mb-4"
           style="background: linear-gradient(135deg, var(--dm-bg-muted) 0%, var(--dm-border-default) 100%);">
        <svg class="w-8 h-8 dm-text-subtle" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
      </div>
      <h3 class="font-semibold mb-1 dm-text-primary">No projects yet</h3>
      <p class="text-sm mb-6 dm-text-muted">Create a project to start monitoring your infrastructure</p>
      <%= link_to new_dashboard_project_path,
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition-all hover:-translate-y-0.5",
          style: "background: linear-gradient(180deg, #F97316 0%, #EA580C 100%); box-shadow: 0 1px 2px rgba(234, 88, 12, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Create Project
      <% end %>
    </div>
  <% end %>

  <% if @projects.any? %>
    <div class="mt-6">
      <%= link_to new_dashboard_project_path,
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium transition-all border dm-bg-muted dm-text-secondary dm-border" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        New Project
      <% end %>
    </div>
  <% end %>
</div>
