<% content_for(:title) { "Projects" } %>

<div class="max-w-4xl">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-2xl font-semibold" style="color: var(--color-ink-900);">Projects</h1>
    <p class="mt-1 text-sm" style="color: var(--color-ink-500);">Select a project to monitor infrastructure</p>
  </div>

  <% if @projects.any? %>
    <div class="grid gap-4">
      <% @projects.each do |project| %>
        <%= link_to dashboard_project_overview_path(project),
            class: "block rounded-2xl border p-6 transition hover:shadow-md",
            style: "background: #FFFFFE; border-color: var(--color-cream-200);" do %>
          <div class="flex items-start justify-between">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center text-lg font-semibold"
                   style="background: rgba(224, 122, 95, 0.1); color: var(--color-sentinel);">
                <%= project.name.first.upcase %>
              </div>
              <div>
                <h3 class="font-semibold" style="color: var(--color-ink-900);"><%= project.name %></h3>
                <p class="text-sm mt-0.5" style="color: var(--color-ink-500);">
                  <%= project.environment&.capitalize || 'Production' %>
                </p>
              </div>
            </div>

            <div class="flex items-center gap-6 text-sm">
              <div class="text-center">
                <p class="font-semibold" style="color: var(--color-ink-900);"><%= project.host_count %></p>
                <p style="color: var(--color-ink-400);">Hosts</p>
              </div>
              <div class="text-center">
                <p class="font-semibold" style="color: var(--color-success);"><%= project.online_host_count %></p>
                <p style="color: var(--color-ink-400);">Online</p>
              </div>
              <div class="text-center">
                <p class="font-semibold" style="color: var(--color-error);"><%= project.offline_host_count %></p>
                <p style="color: var(--color-ink-400);">Offline</p>
              </div>
              <svg class="w-5 h-5" style="color: var(--color-ink-300);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="rounded-2xl border p-12 text-center" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="w-16 h-16 rounded-2xl mx-auto flex items-center justify-center mb-4"
           style="background: var(--color-cream-100);">
        <svg class="w-8 h-8" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
      </div>
      <h3 class="font-semibold mb-1" style="color: var(--color-ink-900);">No projects yet</h3>
      <p class="text-sm mb-6" style="color: var(--color-ink-500);">Create a project to start monitoring your infrastructure</p>
      <%= link_to new_dashboard_project_path,
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition hover:opacity-90",
          style: "background: var(--color-sentinel);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Create Project
      <% end %>
    </div>
  <% end %>

  <% if @projects.any? %>
    <div class="mt-6">
      <%= link_to new_dashboard_project_path,
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium transition",
          style: "background: var(--color-cream-100); color: var(--color-ink-700);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        New Project
      <% end %>
    </div>
  <% end %>
</div>
