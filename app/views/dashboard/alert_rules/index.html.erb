<% content_for(:title) { "Alert Rules - #{current_project.name}" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold dm-text-primary">Alert Rules</h1>
      <p class="mt-1 text-sm dm-text-muted">Configure alerts for your infrastructure</p>
    </div>
    <%= link_to dashboard_project_new_alert_rule_path(current_project),
        class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition hover:opacity-90",
        style: "background: var(--color-sentinel);" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      New Rule
    <% end %>
  </div>

  <% if @alert_rules.any? %>
    <div class="rounded-2xl border overflow-hidden dm-card">
      <table class="w-full">
        <thead>
          <tr class="dm-table-header">
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">Rule</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">Condition</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">Scope</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">Severity</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">Status</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y dm-table-border">
          <% @alert_rules.each do |rule| %>
            <tr class="dm-table-row-hover transition">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="w-9 h-9 rounded-lg flex items-center justify-center"
                       style="background: <%= rule.currently_firing_hosts.any? ? 'var(--dm-badge-error-bg)' : 'var(--dm-bg-muted)' %>;">
                    <svg class="w-5 h-5" style="color: <%= rule.currently_firing_hosts.any? ? 'var(--color-error)' : 'var(--dm-text-muted)' %>;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium dm-text-primary"><%= rule.name %></p>
                    <p class="text-xs dm-text-subtle">
                      <% if rule.currently_firing_hosts.any? %>
                        Firing on <%= rule.currently_firing_hosts.count %> host(s)
                      <% elsif rule.last_triggered_at %>
                        Last triggered <%= time_ago_in_words(rule.last_triggered_at) %> ago
                      <% else %>
                        Never triggered
                      <% end %>
                    </p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm font-mono px-2 py-1 rounded dm-code">
                  <%= rule.metric.humanize %> <%= { 'gt' => '>', 'gte' => '>=', 'lt' => '<', 'lte' => '<=', 'eq' => '=' }[rule.operator] %> <%= rule.threshold %>
                </span>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm dm-text-tertiary">
                  <%= rule.scope_type.capitalize %>
                </span>
              </td>
              <td class="px-6 py-4">
                <% severity_classes = { 'info' => 'dm-badge-neutral', 'warning' => 'dm-badge-warning', 'critical' => 'dm-badge-error' } %>
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium <%= severity_classes[rule.severity] %>">
                  <%= rule.severity.capitalize %>
                </span>
              </td>
              <td class="px-6 py-4">
                <% if rule.enabled %>
                  <span class="inline-flex items-center gap-1.5 text-xs font-medium"
                        style="color: var(--color-success);">
                    <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-success);"></span>
                    Enabled
                  </span>
                <% else %>
                  <span class="inline-flex items-center gap-1.5 text-xs font-medium dm-text-subtle">
                    <span class="w-1.5 h-1.5 rounded-full dm-text-disabled" style="background: currentColor;"></span>
                    Disabled
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-right">
                <%= link_to dashboard_project_alert_rule_path(current_project, rule), class: "text-sm font-medium transition", style: "color: var(--color-sentinel);" do %>
                  View
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="rounded-2xl border p-12 text-center dm-card">
      <div class="w-16 h-16 rounded-2xl mx-auto flex items-center justify-center mb-4 dm-bg-muted">
        <svg class="w-8 h-8 dm-text-subtle" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
      </div>
      <h3 class="font-semibold mb-1 dm-text-primary">No alert rules</h3>
      <p class="text-sm mb-6 max-w-sm mx-auto dm-text-muted">Create alert rules to get notified when metrics exceed thresholds</p>
      <%= link_to dashboard_project_new_alert_rule_path(current_project),
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition hover:opacity-90",
          style: "background: var(--color-sentinel);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Create Rule
      <% end %>
    </div>
  <% end %>
</div>
