<% content_for(:title) { "#{@alert_rule.name} - #{current_project.name}" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <%= link_to dashboard_project_alert_rules_path(current_project),
          class: "inline-flex items-center gap-1 text-sm font-medium mb-2 transition dm-text-muted" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to alert rules
      <% end %>
      <div class="flex items-center gap-4">
        <h1 class="text-2xl font-semibold dm-text-primary"><%= @alert_rule.name %></h1>
        <% if @alert_rule.enabled %>
          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium dm-badge-success">
            <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-success);"></span>
            Enabled
          </span>
        <% else %>
          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium dm-badge-neutral">
            <span class="w-1.5 h-1.5 rounded-full dm-text-disabled" style="background: currentColor;"></span>
            Disabled
          </span>
        <% end %>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to dashboard_project_edit_alert_rule_path(current_project, @alert_rule),
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium transition dm-bg-muted dm-text-secondary" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit
      <% end %>
    </div>
  </div>

  <!-- Status Card -->
  <% if @alert_rule.currently_firing_hosts.any? %>
    <div class="rounded-2xl border p-6 dm-alert-error">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0 dm-badge-error">
          <svg class="w-5 h-5" style="color: var(--color-error);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold" style="color: var(--dm-badge-error-text);">Alert Firing</h3>
          <p class="text-sm mt-1" style="color: var(--dm-badge-error-text); opacity: 0.9;">This alert is currently firing on <%= @alert_rule.currently_firing_hosts.count %> host(s)</p>
          <div class="flex flex-wrap gap-2 mt-3">
            <% @firing_hosts.each do |host| %>
              <%= link_to dashboard_project_host_path(current_project, host),
                  class: "text-sm px-2.5 py-1 rounded-full transition dm-badge-error" do %>
                <%= host.name || host.hostname %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Rule Details -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="rounded-2xl border overflow-hidden dm-card">
      <div class="px-6 py-4 border-b dm-border">
        <h2 class="font-semibold dm-text-primary">Condition</h2>
      </div>
      <div class="p-6 space-y-4">
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Metric</span>
          <span class="text-sm font-medium dm-text-primary"><%= @alert_rule.metric.humanize %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Operator</span>
          <span class="text-sm font-medium dm-text-primary"><%= { 'gt' => 'Greater than', 'gte' => 'Greater than or equal', 'lt' => 'Less than', 'lte' => 'Less than or equal', 'eq' => 'Equal to' }[@alert_rule.operator] %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Threshold</span>
          <span class="text-sm font-medium dm-text-primary"><%= @alert_rule.threshold %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Duration</span>
          <span class="text-sm font-medium dm-text-primary"><%= @alert_rule.duration_seconds / 60 %> minutes</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Aggregation</span>
          <span class="text-sm font-medium dm-text-primary"><%= @alert_rule.aggregation&.capitalize || 'Average' %></span>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border overflow-hidden dm-card">
      <div class="px-6 py-4 border-b dm-border">
        <h2 class="font-semibold dm-text-primary">Configuration</h2>
      </div>
      <div class="p-6 space-y-4">
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Scope</span>
          <span class="text-sm font-medium dm-text-primary"><%= @alert_rule.scope_type.capitalize %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Severity</span>
          <% severity_classes = { 'info' => 'dm-badge-neutral', 'warning' => 'dm-badge-warning', 'critical' => 'dm-badge-error' } %>
          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium <%= severity_classes[@alert_rule.severity] %>">
            <%= @alert_rule.severity.capitalize %>
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Last Triggered</span>
          <span class="text-sm font-medium dm-text-primary">
            <%= @alert_rule.last_triggered_at ? time_ago_in_words(@alert_rule.last_triggered_at) + ' ago' : 'Never' %>
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm dm-text-muted">Last Resolved</span>
          <span class="text-sm font-medium dm-text-primary">
            <%= @alert_rule.last_resolved_at ? time_ago_in_words(@alert_rule.last_resolved_at) + ' ago' : 'Never' %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Expression Preview -->
  <div class="rounded-2xl border p-6 dm-card">
    <h3 class="font-semibold mb-4 dm-text-primary">Rule Expression</h3>
    <div class="px-4 py-3 rounded-xl font-mono text-sm dm-code">
      <span style="color: var(--color-sentinel);"><%= @alert_rule.aggregation %></span>(<span class="dm-text-primary"><%= @alert_rule.metric %></span>) over <span class="dm-text-primary"><%= @alert_rule.duration_seconds / 60 %>m</span> <span style="color: var(--color-sentinel);"><%= @alert_rule.operator %></span> <span class="dm-text-primary"><%= @alert_rule.threshold %></span>
    </div>
  </div>
</div>
