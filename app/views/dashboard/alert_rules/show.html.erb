<% content_for(:title) { "#{@alert_rule.name} - #{current_project.name}" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <%= link_to dashboard_project_alert_rules_path(current_project),
          class: "inline-flex items-center gap-1 text-sm font-medium mb-2 transition",
          style: "color: var(--color-ink-500);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to alert rules
      <% end %>
      <div class="flex items-center gap-4">
        <h1 class="text-2xl font-semibold" style="color: var(--color-ink-900);"><%= @alert_rule.name %></h1>
        <% if @alert_rule.enabled %>
          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                style="background: rgba(34, 197, 94, 0.1); color: #166534;">
            <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-success);"></span>
            Enabled
          </span>
        <% else %>
          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                style="background: var(--color-cream-100); color: var(--color-ink-500);">
            <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-ink-300);"></span>
            Disabled
          </span>
        <% end %>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to dashboard_project_edit_alert_rule_path(current_project, @alert_rule),
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium transition",
          style: "background: var(--color-cream-100); color: var(--color-ink-700);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit
      <% end %>
    </div>
  </div>

  <!-- Status Card -->
  <% if @alert_rule.currently_firing_hosts.any? %>
    <div class="rounded-2xl border p-6" style="background: rgba(239, 68, 68, 0.05); border-color: rgba(239, 68, 68, 0.2);">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0" style="background: rgba(239, 68, 68, 0.1);">
          <svg class="w-5 h-5" style="color: var(--color-error);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold" style="color: #991B1B;">Alert Firing</h3>
          <p class="text-sm mt-1" style="color: #B91C1C;">This alert is currently firing on <%= @alert_rule.currently_firing_hosts.count %> host(s)</p>
          <div class="flex flex-wrap gap-2 mt-3">
            <% @firing_hosts.each do |host| %>
              <%= link_to dashboard_project_host_path(current_project, host),
                  class: "text-sm px-2.5 py-1 rounded-full transition",
                  style: "background: rgba(239, 68, 68, 0.1); color: #991B1B;" do %>
                <%= host.name || host.hostname %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Rule Details -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="rounded-2xl border overflow-hidden" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="px-6 py-4 border-b" style="border-color: var(--color-cream-200);">
        <h2 class="font-semibold" style="color: var(--color-ink-900);">Condition</h2>
      </div>
      <div class="p-6 space-y-4">
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Metric</span>
          <span class="text-sm font-medium" style="color: var(--color-ink-900);"><%= @alert_rule.metric.humanize %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Operator</span>
          <span class="text-sm font-medium" style="color: var(--color-ink-900);"><%= { 'gt' => 'Greater than', 'gte' => 'Greater than or equal', 'lt' => 'Less than', 'lte' => 'Less than or equal', 'eq' => 'Equal to' }[@alert_rule.operator] %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Threshold</span>
          <span class="text-sm font-medium" style="color: var(--color-ink-900);"><%= @alert_rule.threshold %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Duration</span>
          <span class="text-sm font-medium" style="color: var(--color-ink-900);"><%= @alert_rule.duration_seconds / 60 %> minutes</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Aggregation</span>
          <span class="text-sm font-medium" style="color: var(--color-ink-900);"><%= @alert_rule.aggregation&.capitalize || 'Average' %></span>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border overflow-hidden" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="px-6 py-4 border-b" style="border-color: var(--color-cream-200);">
        <h2 class="font-semibold" style="color: var(--color-ink-900);">Configuration</h2>
      </div>
      <div class="p-6 space-y-4">
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Scope</span>
          <span class="text-sm font-medium" style="color: var(--color-ink-900);"><%= @alert_rule.scope_type.capitalize %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Severity</span>
          <% severity_colors = { 'info' => 'var(--color-ink-500)', 'warning' => 'var(--color-warning)', 'critical' => 'var(--color-error)' } %>
          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                style="background: <%= severity_colors[@alert_rule.severity] %>15; color: <%= severity_colors[@alert_rule.severity] %>;">
            <%= @alert_rule.severity.capitalize %>
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Last Triggered</span>
          <span class="text-sm font-medium" style="color: var(--color-ink-900);">
            <%= @alert_rule.last_triggered_at ? time_ago_in_words(@alert_rule.last_triggered_at) + ' ago' : 'Never' %>
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm" style="color: var(--color-ink-500);">Last Resolved</span>
          <span class="text-sm font-medium" style="color: var(--color-ink-900);">
            <%= @alert_rule.last_resolved_at ? time_ago_in_words(@alert_rule.last_resolved_at) + ' ago' : 'Never' %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Expression Preview -->
  <div class="rounded-2xl border p-6" style="background: #FFFFFE; border-color: var(--color-cream-200);">
    <h3 class="font-semibold mb-4" style="color: var(--color-ink-900);">Rule Expression</h3>
    <div class="px-4 py-3 rounded-xl font-mono text-sm" style="background: var(--color-cream-50); color: var(--color-ink-700);">
      <span style="color: var(--color-sentinel);"><%= @alert_rule.aggregation %></span>(<span style="color: var(--color-ink-900);"><%= @alert_rule.metric %></span>) over <span style="color: var(--color-ink-900);"><%= @alert_rule.duration_seconds / 60 %>m</span> <span style="color: var(--color-sentinel);"><%= @alert_rule.operator %></span> <span style="color: var(--color-ink-900);"><%= @alert_rule.threshold %></span>
    </div>
  </div>
</div>
