<% content_for(:title) { "Overview - #{current_project.name}" } %>

<div class="space-y-8">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold" style="color: var(--color-ink-900);">Overview</h1>
      <p class="mt-1 text-sm" style="color: var(--color-ink-500);">Infrastructure health for <%= current_project.name %></p>
    </div>
    <%= link_to dashboard_project_new_host_path(current_project),
        class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition hover:opacity-90",
        style: "background: var(--color-sentinel);" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Host
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="rounded-2xl border p-5" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: var(--color-cream-100);">
          <svg class="w-5 h-5" style="color: var(--color-ink-500);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-semibold" style="color: var(--color-ink-900);"><%= @host_count %></p>
          <p class="text-sm" style="color: var(--color-ink-500);">Total Hosts</p>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border p-5" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(34, 197, 94, 0.1);">
          <svg class="w-5 h-5" style="color: var(--color-success);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-semibold" style="color: var(--color-success);"><%= @online_count %></p>
          <p class="text-sm" style="color: var(--color-ink-500);">Online</p>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border p-5" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(239, 68, 68, 0.1);">
          <svg class="w-5 h-5" style="color: var(--color-error);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-semibold" style="color: var(--color-error);"><%= @offline_count %></p>
          <p class="text-sm" style="color: var(--color-ink-500);">Offline</p>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border p-5" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(245, 158, 11, 0.1);">
          <svg class="w-5 h-5" style="color: var(--color-warning);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-semibold" style="color: var(--color-ink-900);"><%= @alert_count %></p>
          <p class="text-sm" style="color: var(--color-ink-500);">Alert Rules</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Hosts List -->
  <div class="rounded-2xl border overflow-hidden" style="background: #FFFFFE; border-color: var(--color-cream-200);">
    <div class="px-6 py-4 border-b flex items-center justify-between" style="border-color: var(--color-cream-200);">
      <h2 class="font-semibold" style="color: var(--color-ink-900);">Recent Hosts</h2>
      <%= link_to "View all", dashboard_project_hosts_path(current_project), class: "text-sm font-medium transition", style: "color: var(--color-sentinel);" %>
    </div>

    <% if @hosts.any? %>
      <div class="divide-y" style="border-color: var(--color-cream-100);">
        <% @hosts.each do |host| %>
          <%= link_to dashboard_project_host_path(current_project, host),
              class: "flex items-center justify-between px-6 py-4 hover:bg-[var(--color-cream-50)] transition" do %>
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-xl flex items-center justify-center"
                   style="background: var(--color-cream-100);">
                <svg class="w-5 h-5" style="color: var(--color-ink-500);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
                </svg>
              </div>
              <div>
                <p class="font-medium" style="color: var(--color-ink-900);"><%= host.name || host.hostname %></p>
                <p class="text-sm" style="color: var(--color-ink-500);"><%= host.host_group&.name || host.hostname %></p>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <% if host.online? %>
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                      style="background: rgba(34, 197, 94, 0.1); color: #166534;">
                  <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-success);"></span>
                  Online
                </span>
              <% else %>
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                      style="background: rgba(239, 68, 68, 0.1); color: #991B1B;">
                  <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-error);"></span>
                  Offline
                </span>
              <% end %>

              <div class="flex items-center gap-4 text-sm" style="color: var(--color-ink-500);">
                <div class="flex items-center gap-1">
                  <span>CPU</span>
                  <span class="font-medium" style="color: var(--color-ink-700);"><%= host.current_cpu.round(1) %>%</span>
                </div>
                <div class="flex items-center gap-1">
                  <span>Mem</span>
                  <span class="font-medium" style="color: var(--color-ink-700);"><%= host.current_memory.round(1) %>%</span>
                </div>
              </div>

              <svg class="w-5 h-5" style="color: var(--color-ink-300);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <div class="w-16 h-16 rounded-2xl mx-auto flex items-center justify-center mb-4"
             style="background: var(--color-cream-100);">
          <svg class="w-8 h-8" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
          </svg>
        </div>
        <h3 class="font-semibold mb-1" style="color: var(--color-ink-900);">No hosts registered</h3>
        <p class="text-sm mb-6" style="color: var(--color-ink-500);">Install the Sentinel agent on your servers to start monitoring</p>
        <div class="rounded-xl p-4 text-left max-w-md mx-auto" style="background: var(--color-cream-50);">
          <p class="text-xs font-medium mb-2" style="color: var(--color-ink-500);">Quick install</p>
          <code class="text-sm font-mono" style="color: var(--color-ink-700);">curl -sSL sentinel.brainzlab.ai/install | bash</code>
        </div>
      </div>
    <% end %>
  </div>

  <% if @host_groups.any? %>
    <!-- Host Groups -->
    <div class="rounded-2xl border overflow-hidden" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="px-6 py-4 border-b flex items-center justify-between" style="border-color: var(--color-cream-200);">
        <h2 class="font-semibold" style="color: var(--color-ink-900);">Host Groups</h2>
        <%= link_to "View all", dashboard_project_host_groups_path(current_project), class: "text-sm font-medium transition", style: "color: var(--color-sentinel);" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
        <% @host_groups.each do |group| %>
          <%= link_to dashboard_project_host_group_path(current_project, group),
              class: "rounded-xl border p-4 hover:border-[var(--color-sentinel)] transition",
              style: "border-color: var(--color-cream-200);" do %>
            <div class="flex items-center justify-between mb-3">
              <h3 class="font-medium" style="color: var(--color-ink-900);"><%= group.name %></h3>
              <span class="text-sm font-medium px-2 py-0.5 rounded-full"
                    style="background: var(--color-cream-100); color: var(--color-ink-600);">
                <%= group.host_count %> hosts
              </span>
            </div>
            <div class="flex items-center gap-4 text-sm">
              <div>
                <span style="color: var(--color-ink-400);">Avg CPU</span>
                <span class="ml-1 font-medium" style="color: var(--color-ink-700);"><%= group.average_cpu %>%</span>
              </div>
              <div>
                <span style="color: var(--color-ink-400);">Avg Mem</span>
                <span class="ml-1 font-medium" style="color: var(--color-ink-700);"><%= group.average_memory %>%</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
