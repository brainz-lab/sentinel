<% content_for(:title) { "Overview - #{current_project.name}" } %>

<div class="space-y-8">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight dm-text-primary">Overview</h1>
      <p class="mt-1 text-sm dm-text-muted">Infrastructure health for <%= current_project.name %></p>
    </div>
    <%= link_to dashboard_project_new_host_path(current_project),
        class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition-all hover:-translate-y-0.5",
        style: "background: linear-gradient(180deg, #F97316 0%, #EA580C 100%); box-shadow: 0 1px 2px rgba(234, 88, 12, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1);" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Host
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="rounded-2xl border p-5 transition-all hover:shadow-md dm-card">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center dm-bg-muted">
          <svg class="w-5 h-5 dm-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-semibold tracking-tight dm-text-primary"><%= @host_count %></p>
          <p class="text-sm dm-text-muted">Total Hosts</p>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border p-5 transition-all hover:shadow-md dm-card">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center dm-badge-success">
          <svg class="w-5 h-5" style="color: var(--color-success);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-semibold tracking-tight" style="color: var(--color-success);"><%= @online_count %></p>
          <p class="text-sm dm-text-muted">Online</p>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border p-5 transition-all hover:shadow-md dm-card">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center dm-badge-error">
          <svg class="w-5 h-5" style="color: var(--color-error);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-semibold tracking-tight" style="color: var(--color-error);"><%= @offline_count %></p>
          <p class="text-sm dm-text-muted">Offline</p>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border p-5 transition-all hover:shadow-md dm-card">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center dm-sentinel-gradient-bg">
          <svg class="w-5 h-5" style="color: var(--color-sentinel);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-semibold tracking-tight dm-text-primary"><%= @alert_count %></p>
          <p class="text-sm dm-text-muted">Alert Rules</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Hosts List -->
  <div class="rounded-2xl border overflow-hidden dm-card">
    <div class="px-6 py-4 border-b flex items-center justify-between dm-border">
      <h2 class="font-semibold tracking-tight dm-text-primary">Recent Hosts</h2>
      <%= link_to "View all", dashboard_project_hosts_path(current_project), class: "text-sm font-medium transition hover:opacity-80", style: "color: var(--color-sentinel);" %>
    </div>

    <% if @hosts.any? %>
      <div class="divide-y dm-table-border">
        <% @hosts.each do |host| %>
          <%= link_to dashboard_project_host_path(current_project, host),
              class: "flex items-center justify-between px-6 py-4 dm-table-row-hover transition" do %>
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-xl flex items-center justify-center dm-bg-muted">
                <svg class="w-5 h-5 dm-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
                </svg>
              </div>
              <div>
                <p class="font-medium dm-text-primary"><%= host.name || host.hostname %></p>
                <p class="text-sm dm-text-muted"><%= host.host_group&.name || host.hostname %></p>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <% if host.online? %>
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium dm-badge-success">
                  <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-success);"></span>
                  Online
                </span>
              <% else %>
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium dm-badge-error">
                  <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-error);"></span>
                  Offline
                </span>
              <% end %>

              <div class="flex items-center gap-4 text-sm dm-text-muted">
                <div class="flex items-center gap-1">
                  <span>CPU</span>
                  <span class="font-medium dm-text-secondary"><%= host.current_cpu.round(1) %>%</span>
                </div>
                <div class="flex items-center gap-1">
                  <span>Mem</span>
                  <span class="font-medium dm-text-secondary"><%= host.current_memory.round(1) %>%</span>
                </div>
              </div>

              <svg class="w-5 h-5 dm-text-disabled" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <div class="w-16 h-16 rounded-2xl mx-auto flex items-center justify-center mb-4 dm-bg-muted">
          <svg class="w-8 h-8 dm-text-subtle" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
          </svg>
        </div>
        <h3 class="font-semibold mb-1 dm-text-primary">No hosts registered</h3>
        <p class="text-sm mb-6 dm-text-muted">Install the Sentinel agent on your servers to start monitoring</p>
        <div class="rounded-xl p-4 text-left max-w-md mx-auto dm-bg-subtle">
          <p class="text-xs font-medium mb-2 dm-text-muted">Quick install</p>
          <code class="text-sm font-mono dm-text-secondary">curl -sSL sentinel.brainzlab.ai/install | bash</code>
        </div>
      </div>
    <% end %>
  </div>

  <% if @host_groups.any? %>
    <!-- Host Groups -->
    <div class="rounded-2xl border overflow-hidden dm-card">
      <div class="px-6 py-4 border-b flex items-center justify-between dm-border">
        <h2 class="font-semibold dm-text-primary">Host Groups</h2>
        <%= link_to "View all", dashboard_project_host_groups_path(current_project), class: "text-sm font-medium transition", style: "color: var(--color-sentinel);" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
        <% @host_groups.each do |group| %>
          <%= link_to dashboard_project_host_group_path(current_project, group),
              class: "rounded-xl border p-4 hover:border-[var(--color-sentinel)] transition dm-border" do %>
            <div class="flex items-center justify-between mb-3">
              <h3 class="font-medium dm-text-primary"><%= group.name %></h3>
              <span class="text-sm font-medium px-2 py-0.5 rounded-full dm-badge-neutral">
                <%= group.host_count %> hosts
              </span>
            </div>
            <div class="flex items-center gap-4 text-sm">
              <div>
                <span class="dm-text-subtle">Avg CPU</span>
                <span class="ml-1 font-medium dm-text-secondary"><%= group.average_cpu %>%</span>
              </div>
              <div>
                <span class="dm-text-subtle">Avg Mem</span>
                <span class="ml-1 font-medium dm-text-secondary"><%= group.average_memory %>%</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
