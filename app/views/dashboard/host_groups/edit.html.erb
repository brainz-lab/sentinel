<% content_for(:title) { "Edit #{@host_group.name} - #{current_project.name}" } %>

<div class="max-w-xl">
  <div class="mb-8">
    <%= link_to dashboard_project_host_group_path(current_project, @host_group),
        class: "inline-flex items-center gap-1 text-sm font-medium mb-4 transition dm-text-muted" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to group
    <% end %>
    <h1 class="text-2xl font-semibold dm-text-primary">Edit Host Group</h1>
    <p class="mt-1 text-sm dm-text-muted"><%= @host_group.name %></p>
  </div>

  <div class="rounded-2xl border p-6 dm-card">
    <%= render 'form' %>
  </div>

  <div class="mt-6 pt-6 border-t dm-border">
    <h3 class="text-sm font-medium mb-3 dm-text-secondary">Danger Zone</h3>
    <%= button_to "Delete Group", dashboard_project_host_group_path(current_project, @host_group),
        method: :delete,
        class: "px-4 py-2.5 rounded-xl text-sm font-medium transition hover:opacity-90 dm-badge-error",
        data: { confirm: "Are you sure you want to delete this group? Hosts will be unassigned but not deleted." } %>
  </div>
</div>
