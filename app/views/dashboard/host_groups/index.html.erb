<% content_for(:title) { "Host Groups - #{current_project.name}" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold" style="color: var(--color-ink-900);">Host Groups</h1>
      <p class="mt-1 text-sm" style="color: var(--color-ink-500);">Organize hosts into logical groups</p>
    </div>
    <%= link_to dashboard_project_new_host_group_path(current_project),
        class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition hover:opacity-90",
        style: "background: var(--color-sentinel);" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      New Group
    <% end %>
  </div>

  <% if @host_groups.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @host_groups.each do |group| %>
        <%= link_to dashboard_project_host_group_path(current_project, group),
            class: "block rounded-2xl border p-6 transition hover:shadow-md hover:border-[var(--color-sentinel)]",
            style: "background: #FFFFFE; border-color: var(--color-cream-200);" do %>
          <div class="flex items-start justify-between mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center"
                 style="background: rgba(224, 122, 95, 0.1);">
              <svg class="w-6 h-6" style="color: var(--color-sentinel);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
            <span class="text-sm font-medium px-2.5 py-1 rounded-full"
                  style="background: var(--color-cream-100); color: var(--color-ink-600);">
              <%= group.host_count %> hosts
            </span>
          </div>

          <h3 class="font-semibold mb-1" style="color: var(--color-ink-900);"><%= group.name %></h3>
          <% if group.description.present? %>
            <p class="text-sm mb-4 line-clamp-2" style="color: var(--color-ink-500);"><%= group.description %></p>
          <% end %>

          <div class="flex items-center gap-6 text-sm pt-4 border-t" style="border-color: var(--color-cream-100);">
            <div>
              <span style="color: var(--color-ink-400);">Avg CPU</span>
              <span class="ml-1 font-medium" style="color: var(--color-ink-700);"><%= group.average_cpu %>%</span>
            </div>
            <div>
              <span style="color: var(--color-ink-400);">Avg Memory</span>
              <span class="ml-1 font-medium" style="color: var(--color-ink-700);"><%= group.average_memory %>%</span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="rounded-2xl border p-12 text-center" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="w-16 h-16 rounded-2xl mx-auto flex items-center justify-center mb-4"
           style="background: var(--color-cream-100);">
        <svg class="w-8 h-8" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
      </div>
      <h3 class="font-semibold mb-1" style="color: var(--color-ink-900);">No host groups</h3>
      <p class="text-sm mb-6 max-w-sm mx-auto" style="color: var(--color-ink-500);">Create groups to organize your hosts by environment, role, or any other criteria</p>
      <%= link_to dashboard_project_new_host_group_path(current_project),
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition hover:opacity-90",
          style: "background: var(--color-sentinel);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Create Group
      <% end %>
    </div>
  <% end %>
</div>
