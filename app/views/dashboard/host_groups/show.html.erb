<% content_for(:title) { "#{@host_group.name} - #{current_project.name}" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <%= link_to dashboard_project_host_groups_path(current_project),
          class: "inline-flex items-center gap-1 text-sm font-medium mb-2 transition dm-text-muted" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to groups
      <% end %>
      <h1 class="text-2xl font-semibold dm-text-primary"><%= @host_group.name %></h1>
      <% if @host_group.description.present? %>
        <p class="mt-1 text-sm dm-text-muted"><%= @host_group.description %></p>
      <% end %>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to dashboard_project_edit_host_group_path(current_project, @host_group),
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium transition dm-bg-muted dm-text-secondary" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="rounded-2xl border p-5 dm-card">
      <p class="text-sm mb-1 dm-text-muted">Hosts</p>
      <p class="text-2xl font-semibold dm-text-primary"><%= @host_group.host_count %></p>
    </div>
    <div class="rounded-2xl border p-5 dm-card">
      <p class="text-sm mb-1 dm-text-muted">Average CPU</p>
      <p class="text-2xl font-semibold dm-text-primary"><%= @host_group.average_cpu %>%</p>
    </div>
    <div class="rounded-2xl border p-5 dm-card">
      <p class="text-sm mb-1 dm-text-muted">Average Memory</p>
      <p class="text-2xl font-semibold dm-text-primary"><%= @host_group.average_memory %>%</p>
    </div>
  </div>

  <!-- Hosts in Group -->
  <div class="rounded-2xl border overflow-hidden dm-card">
    <div class="px-6 py-4 border-b dm-border">
      <h2 class="font-semibold dm-text-primary">Hosts in this Group</h2>
    </div>

    <% if @hosts.any? %>
      <table class="w-full">
        <thead>
          <tr class="dm-table-header">
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">Host</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">CPU</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider dm-text-muted">Memory</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y dm-table-border">
          <% @hosts.each do |host| %>
            <tr class="dm-table-row-hover transition">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="w-9 h-9 rounded-lg flex items-center justify-center dm-bg-muted">
                    <svg class="w-5 h-5 dm-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium dm-text-primary"><%= host.name || host.hostname %></p>
                    <p class="text-xs dm-text-subtle"><%= host.hostname %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <% if host.online? %>
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium dm-badge-success">
                    <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-success);"></span>
                    Online
                  </span>
                <% else %>
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium dm-badge-error">
                    <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-error);"></span>
                    Offline
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm font-medium dm-text-secondary"><%= host.current_cpu.round(1) %>%</span>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm font-medium dm-text-secondary"><%= host.current_memory.round(1) %>%</span>
              </td>
              <td class="px-6 py-4 text-right">
                <%= link_to dashboard_project_host_path(current_project, host), class: "text-sm font-medium transition", style: "color: var(--color-sentinel);" do %>
                  View
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-6 py-12 text-center">
        <p class="text-sm dm-text-muted">No hosts in this group yet</p>
      </div>
    <% end %>
  </div>

  <% if @host_group.auto_assign_rules.present? %>
    <div class="rounded-2xl border overflow-hidden dm-card">
      <div class="px-6 py-4 border-b dm-border">
        <h2 class="font-semibold dm-text-primary">Auto-assign Rules</h2>
      </div>
      <div class="p-6">
        <p class="text-sm mb-4 dm-text-muted">Hosts matching these rules will be automatically added to this group:</p>
        <div class="space-y-2">
          <% @host_group.auto_assign_rules.each do |rule| %>
            <div class="flex items-center gap-2 text-sm px-3 py-2 rounded-lg dm-bg-subtle">
              <span class="font-medium dm-text-secondary"><%= rule['field'] %></span>
              <span class="dm-text-subtle"><%= rule['operator'] %></span>
              <span class="font-mono" style="color: var(--color-sentinel);"><%= rule['value'] %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
