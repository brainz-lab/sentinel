<% content_for(:title) { "#{@host_group.name} - #{current_project.name}" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <%= link_to dashboard_project_host_groups_path(current_project),
          class: "inline-flex items-center gap-1 text-sm font-medium mb-2 transition",
          style: "color: var(--color-ink-500);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to groups
      <% end %>
      <h1 class="text-2xl font-semibold" style="color: var(--color-ink-900);"><%= @host_group.name %></h1>
      <% if @host_group.description.present? %>
        <p class="mt-1 text-sm" style="color: var(--color-ink-500);"><%= @host_group.description %></p>
      <% end %>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to dashboard_project_edit_host_group_path(current_project, @host_group),
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium transition",
          style: "background: var(--color-cream-100); color: var(--color-ink-700);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="rounded-2xl border p-5" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <p class="text-sm mb-1" style="color: var(--color-ink-500);">Hosts</p>
      <p class="text-2xl font-semibold" style="color: var(--color-ink-900);"><%= @host_group.host_count %></p>
    </div>
    <div class="rounded-2xl border p-5" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <p class="text-sm mb-1" style="color: var(--color-ink-500);">Average CPU</p>
      <p class="text-2xl font-semibold" style="color: var(--color-ink-900);"><%= @host_group.average_cpu %>%</p>
    </div>
    <div class="rounded-2xl border p-5" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <p class="text-sm mb-1" style="color: var(--color-ink-500);">Average Memory</p>
      <p class="text-2xl font-semibold" style="color: var(--color-ink-900);"><%= @host_group.average_memory %>%</p>
    </div>
  </div>

  <!-- Hosts in Group -->
  <div class="rounded-2xl border overflow-hidden" style="background: #FFFFFE; border-color: var(--color-cream-200);">
    <div class="px-6 py-4 border-b" style="border-color: var(--color-cream-200);">
      <h2 class="font-semibold" style="color: var(--color-ink-900);">Hosts in this Group</h2>
    </div>

    <% if @hosts.any? %>
      <table class="w-full">
        <thead>
          <tr style="background: var(--color-cream-50);">
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">Host</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">CPU</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">Memory</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y" style="border-color: var(--color-cream-100);">
          <% @hosts.each do |host| %>
            <tr class="hover:bg-[var(--color-cream-50)] transition">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="w-9 h-9 rounded-lg flex items-center justify-center" style="background: var(--color-cream-100);">
                    <svg class="w-5 h-5" style="color: var(--color-ink-500);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium" style="color: var(--color-ink-900);"><%= host.name || host.hostname %></p>
                    <p class="text-xs" style="color: var(--color-ink-400);"><%= host.hostname %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <% if host.online? %>
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                        style="background: rgba(34, 197, 94, 0.1); color: #166534;">
                    <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-success);"></span>
                    Online
                  </span>
                <% else %>
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                        style="background: rgba(239, 68, 68, 0.1); color: #991B1B;">
                    <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-error);"></span>
                    Offline
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm font-medium" style="color: var(--color-ink-700);"><%= host.current_cpu.round(1) %>%</span>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm font-medium" style="color: var(--color-ink-700);"><%= host.current_memory.round(1) %>%</span>
              </td>
              <td class="px-6 py-4 text-right">
                <%= link_to dashboard_project_host_path(current_project, host), class: "text-sm font-medium transition", style: "color: var(--color-sentinel);" do %>
                  View
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-6 py-12 text-center">
        <p class="text-sm" style="color: var(--color-ink-500);">No hosts in this group yet</p>
      </div>
    <% end %>
  </div>

  <% if @host_group.auto_assign_rules.present? %>
    <div class="rounded-2xl border overflow-hidden" style="background: #FFFFFE; border-color: var(--color-cream-200);">
      <div class="px-6 py-4 border-b" style="border-color: var(--color-cream-200);">
        <h2 class="font-semibold" style="color: var(--color-ink-900);">Auto-assign Rules</h2>
      </div>
      <div class="p-6">
        <p class="text-sm mb-4" style="color: var(--color-ink-500);">Hosts matching these rules will be automatically added to this group:</p>
        <div class="space-y-2">
          <% @host_group.auto_assign_rules.each do |rule| %>
            <div class="flex items-center gap-2 text-sm px-3 py-2 rounded-lg" style="background: var(--color-cream-50);">
              <span class="font-medium" style="color: var(--color-ink-700);"><%= rule['field'] %></span>
              <span style="color: var(--color-ink-400);"><%= rule['operator'] %></span>
              <span class="font-mono" style="color: var(--color-sentinel);"><%= rule['value'] %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
