<% content_for(:title) { "Hosts - #{current_project.name}" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight" style="color: var(--color-ink-900);">Hosts</h1>
      <p class="mt-1 text-sm" style="color: var(--color-ink-500);"><%= @hosts.count %> hosts in <%= current_project.name %></p>
    </div>
    <%= link_to dashboard_project_new_host_path(current_project),
        class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition-all hover:-translate-y-0.5",
        style: "background: linear-gradient(180deg, #F97316 0%, #EA580C 100%); box-shadow: 0 1px 2px rgba(234, 88, 12, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1);" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Host
    <% end %>
  </div>

  <% if @hosts.any? %>
    <!-- Hosts Table -->
    <div class="rounded-2xl border overflow-hidden" style="background: #FFFFFF; border-color: var(--color-cream-200); box-shadow: 0 1px 3px rgba(28, 27, 26, 0.04);">
      <table class="w-full">
        <thead>
          <tr style="background: var(--color-cream-50);">
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">Host</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">CPU</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">Memory</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">Load</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider" style="color: var(--color-ink-500);">Group</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y" style="border-color: var(--color-cream-100);">
          <% @hosts.each do |host| %>
            <tr class="hover:bg-[var(--color-cream-50)] transition">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="w-9 h-9 rounded-lg flex items-center justify-center" style="background: var(--color-cream-100);">
                    <svg class="w-5 h-5" style="color: var(--color-ink-500);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium" style="color: var(--color-ink-900);"><%= host.name || host.hostname %></p>
                    <p class="text-xs" style="color: var(--color-ink-400);"><%= host.hostname %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <% if host.online? %>
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                        style="background: rgba(34, 197, 94, 0.1); color: #166534;">
                    <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-success);"></span>
                    Online
                  </span>
                <% else %>
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium"
                        style="background: rgba(239, 68, 68, 0.1); color: #991B1B;">
                    <span class="w-1.5 h-1.5 rounded-full" style="background: var(--color-error);"></span>
                    Offline
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="flex items-center gap-2">
                  <div class="w-16 h-1.5 rounded-full overflow-hidden" style="background: var(--color-cream-200);">
                    <div class="h-full rounded-full"
                         style="width: <%= [host.current_cpu, 100].min %>%; background: <%= host.current_cpu > 80 ? 'var(--color-error)' : host.current_cpu > 60 ? 'var(--color-warning)' : 'var(--color-success)' %>;"></div>
                  </div>
                  <span class="text-sm font-medium" style="color: var(--color-ink-700);"><%= host.current_cpu.round(1) %>%</span>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="flex items-center gap-2">
                  <div class="w-16 h-1.5 rounded-full overflow-hidden" style="background: var(--color-cream-200);">
                    <div class="h-full rounded-full"
                         style="width: <%= [host.current_memory, 100].min %>%; background: <%= host.current_memory > 85 ? 'var(--color-error)' : host.current_memory > 70 ? 'var(--color-warning)' : 'var(--color-success)' %>;"></div>
                  </div>
                  <span class="text-sm font-medium" style="color: var(--color-ink-700);"><%= host.current_memory.round(1) %>%</span>
                </div>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm" style="color: var(--color-ink-700);"><%= host.current_load.round(2) %></span>
              </td>
              <td class="px-6 py-4">
                <% if host.host_group %>
                  <span class="text-sm px-2 py-0.5 rounded-full" style="background: var(--color-cream-100); color: var(--color-ink-600);">
                    <%= host.host_group.name %>
                  </span>
                <% else %>
                  <span class="text-sm" style="color: var(--color-ink-400);">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-right">
                <%= link_to dashboard_project_host_path(current_project, host), class: "text-sm font-medium transition", style: "color: var(--color-sentinel);" do %>
                  View
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="rounded-2xl border p-12 text-center" style="background: #FFFFFF; border-color: var(--color-cream-200); box-shadow: 0 1px 3px rgba(28, 27, 26, 0.04);">
      <div class="w-16 h-16 rounded-2xl mx-auto flex items-center justify-center mb-4"
           style="background: linear-gradient(135deg, var(--color-cream-100) 0%, var(--color-cream-200) 100%);">
        <svg class="w-8 h-8" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
        </svg>
      </div>
      <h3 class="font-semibold mb-1" style="color: var(--color-ink-900);">No hosts registered</h3>
      <p class="text-sm mb-6 max-w-sm mx-auto" style="color: var(--color-ink-500);">Install the Sentinel agent on your servers to start monitoring</p>

      <div class="rounded-xl p-4 text-left max-w-md mx-auto mb-6 border" style="background: var(--color-cream-50); border-color: var(--color-cream-200);">
        <p class="text-xs font-medium mb-2" style="color: var(--color-ink-500);">Quick install</p>
        <code class="text-sm font-mono" style="color: var(--color-sentinel);">curl -sSL sentinel.brainzlab.ai/install | bash</code>
      </div>

      <%= link_to dashboard_project_new_host_path(current_project),
          class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium text-white transition-all hover:-translate-y-0.5",
          style: "background: linear-gradient(180deg, #F97316 0%, #EA580C 100%); box-shadow: 0 1px 2px rgba(234, 88, 12, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1);" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Register Host Manually
      <% end %>
    </div>
  <% end %>
</div>
