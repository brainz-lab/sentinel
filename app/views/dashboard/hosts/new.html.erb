<% content_for(:title) { "New Host - #{current_project.name}" } %>

<div class="max-w-xl">
  <div class="mb-8">
    <%= link_to dashboard_project_hosts_path(current_project),
        class: "inline-flex items-center gap-1 text-sm font-medium mb-4 transition dm-text-muted" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to hosts
    <% end %>
    <h1 class="text-2xl font-semibold dm-text-primary">Register Host</h1>
    <p class="mt-1 text-sm dm-text-muted">Manually register a host for monitoring</p>
  </div>

  <div class="rounded-2xl border p-6 dm-card">
    <%= render 'form' %>
  </div>

  <div class="mt-6 rounded-xl p-4 dm-bg-muted">
    <p class="text-sm font-medium mb-2 dm-text-secondary">Prefer automatic registration?</p>
    <p class="text-sm dm-text-muted">Install the Sentinel agent and hosts will register automatically:</p>
    <code class="block mt-2 text-sm font-mono px-3 py-2 rounded-lg dm-code">curl -sSL sentinel.brainzlab.ai/install | bash</code>
  </div>
</div>
