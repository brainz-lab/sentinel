<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <title>Sentinel - <%= content_for(:title) || "Infrastructure Monitoring" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    :root {
      /* Background - Warm Cream/Beige (Anthropic inspired) */
      --color-cream-50: #FDFCFB;
      --color-cream-100: #F5F5F0;
      --color-cream-200: #EBE8E3;
      --color-cream-300: #DDD8CF;
      /* Text - Refined Charcoal */
      --color-ink-900: #1C1B1A;
      --color-ink-800: #3A3835;
      --color-ink-700: #4B4843;
      --color-ink-600: #5D5953;
      --color-ink-500: #75716A;
      --color-ink-400: #918D86;
      --color-ink-300: #BBB8B3;
      /* Brand - Anthropic Orange */
      --color-sentinel: #EA580C;
      --color-sentinel-light: #FB923C;
      --color-sentinel-dark: #C2410C;
      /* Status Colors */
      --color-success: #22C55E;
      --color-warning: #F59E0B;
      --color-error: #EF4444;
    }
    body {
      font-family: 'Inter', system-ui, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    /* Custom scrollbar */
    ::-webkit-scrollbar { width: 0.5rem; height: 0.5rem; }
    ::-webkit-scrollbar-track { background: var(--color-cream-100); }
    ::-webkit-scrollbar-thumb { background: var(--color-cream-300); border-radius: 9999px; }
    ::-webkit-scrollbar-thumb:hover { background: var(--color-ink-400); }
    /* Selection */
    ::selection { background: rgba(234, 88, 12, 0.15); }
  </style>
</head>
<body class="h-full antialiased" style="background: var(--color-cream-100);">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 border-r flex flex-col" style="border-color: var(--color-cream-200); background: linear-gradient(180deg, #FFFFFF 0%, #FDFCFB 100%);">
      <div class="p-5 border-b" style="border-color: var(--color-cream-200);">
        <%= link_to dashboard_root_path, class: "flex items-center gap-2.5 group" do %>
          <div class="w-8 h-8 rounded-lg flex items-center justify-center transition-transform group-hover:scale-105" style="background: linear-gradient(135deg, #F97316 0%, #EA580C 100%); box-shadow: 0 2px 4px rgba(234, 88, 12, 0.25);">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
          </div>
          <span class="font-semibold tracking-tight" style="color: var(--color-ink-900);">Sentinel</span>
        <% end %>
      </div>

      <% if current_project %>
        <!-- Project Selector -->
        <div class="px-4 py-3 border-b" style="border-color: var(--color-cream-100);">
          <%= link_to dashboard_root_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg hover:bg-[var(--color-cream-100)] transition" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: var(--color-cream-200); color: var(--color-ink-600);">
              <%= current_project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate" style="color: var(--color-ink-700);"><%= current_project.name %></span>
            <svg class="w-4 h-4" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <% overview_active = request.path == dashboard_project_overview_path(current_project) %>
          <%= link_to dashboard_project_overview_path(current_project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{overview_active ? 'background: rgba(224, 122, 95, 0.1); color: var(--color-sentinel);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
            Overview
          <% end %>

          <% hosts_active = request.path.include?('/hosts') %>
          <%= link_to dashboard_project_hosts_path(current_project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{hosts_active ? 'background: rgba(224, 122, 95, 0.1); color: var(--color-sentinel);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
            </svg>
            Hosts
          <% end %>

          <% groups_active = request.path.include?('/host_groups') %>
          <%= link_to dashboard_project_host_groups_path(current_project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{groups_active ? 'background: rgba(224, 122, 95, 0.1); color: var(--color-sentinel);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            Groups
          <% end %>

          <% alerts_active = request.path.include?('/alert_rules') %>
          <%= link_to dashboard_project_alert_rules_path(current_project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{alerts_active ? 'background: rgba(224, 122, 95, 0.1); color: var(--color-sentinel);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
            Alert Rules
          <% end %>
        </nav>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3" style="color: var(--color-ink-400);">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <div class="p-4 border-t" style="border-color: var(--color-cream-200);">
        <div class="flex items-center gap-3">
          <div class="w-9 h-9 rounded-full flex items-center justify-center text-sm font-semibold" style="background: linear-gradient(135deg, rgba(249, 115, 22, 0.12) 0%, rgba(234, 88, 12, 0.18) 100%); color: var(--color-sentinel);">
            <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium truncate" style="color: var(--color-ink-900);"><%= current_user.name || current_user.email.split('@').first %></p>
            <p class="text-xs truncate" style="color: var(--color-ink-500);"><%= current_user.email %></p>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto">
      <% if notice %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-sm font-medium" style="background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.2); color: #166534;">
          <%= notice %>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-sm font-medium" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: #991B1B;">
          <%= alert %>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
