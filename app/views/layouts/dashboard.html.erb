<!DOCTYPE html>
<html lang="en" class="h-full" data-controller="dark-mode">
<head>
  <title>Sentinel - <%= content_for(:title) || "Infrastructure Monitoring" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%# Fonts %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600;8..60,700&display=swap" rel="stylesheet">

  <%# BrainzLab UI Design System %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "dark_mode", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <%# Prevent flash of wrong theme %>
  <script>
    (function() {
      const storedTheme = localStorage.getItem('sentinel-theme');
      if (storedTheme) {
        document.documentElement.setAttribute('data-theme', storedTheme);
      }
    })();
  </script>

  <style>
    :root {
      /* Sentinel-specific brand colors */
      --color-sentinel: #EA580C;
      --color-sentinel-dark: #C2410C;
      --color-sentinel-light: #FB923C;
      --color-sentinel-bg: #FFEDD5;
      --color-sentinel-bg-subtle: #FFF7ED;
    }
  </style>

  <%# Google Analytics - only in production %>
  <% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CXHFR6PC8W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CXHFR6PC8W');
    </script>
  <% end %>
</head>
<body class="h-full antialiased dm-bg-base">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex flex-col dm-sidebar" style="border-right: 1px solid var(--dm-border-default);">
      <div class="p-5 flex items-center justify-between" style="border-bottom: 1px solid var(--dm-border-default);">
        <%= link_to dashboard_root_path, class: "flex items-center gap-2.5" do %>
          <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: var(--color-sentinel);">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
          </div>
          <span class="font-semibold dm-text-primary">Sentinel</span>
        <% end %>
        <button type="button"
                class="dark-mode-toggle"
                data-action="click->dark-mode#toggle"
                aria-label="Toggle dark mode">
          <svg class="icon-moon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
          </svg>
          <svg class="icon-sun" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
          </svg>
        </button>
      </div>

      <% if current_project %>
        <!-- Project Selector -->
        <div class="px-4 py-3" style="border-bottom: 1px solid var(--dm-border-default);">
          <%= link_to dashboard_root_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg transition dm-text-secondary" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold dm-sentinel-gradient-bg" style="color: var(--color-sentinel);">
              <%= current_project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate"><%= current_project.name %></span>
            <svg class="w-4 h-4 dm-text-subtle" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <%= link_to dashboard_project_overview_path(current_project), class: nav_link_class('/overview') do %>
            <%= icon(:overview) %>
            Overview
          <% end %>

          <%= link_to dashboard_project_hosts_path(current_project), class: nav_link_class('/hosts') do %>
            <%= icon(:hosts) %>
            Hosts
          <% end %>

          <%= link_to dashboard_project_host_groups_path(current_project), class: nav_link_class('/host_groups') do %>
            <%= icon(:groups) %>
            Groups
          <% end %>

          <%= link_to dashboard_project_alert_rules_path(current_project), class: nav_link_class('/alert_rules') do %>
            <%= icon(:alerts) %>
            Alert Rules
          <% end %>
        </nav>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3 dm-text-subtle">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <div class="p-4" style="border-top: 1px solid var(--dm-border-default);">
        <div class="flex items-center gap-3">
          <div class="avatar avatar-md avatar-primary">
            <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium truncate dm-text-primary"><%= current_user.name || current_user.email.split('@').first %></p>
            <p class="text-xs truncate dm-text-muted"><%= current_user.email %></p>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto">
      <% if notice %>
        <div class="m-8 mb-0 alert alert-success">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 alert alert-error">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
