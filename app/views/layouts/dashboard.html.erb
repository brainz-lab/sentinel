<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <title>Sentinel - <%= content_for(:title) || "Infrastructure Monitoring" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%# Fonts %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600;8..60,700&display=swap" rel="stylesheet">

  <%# BrainzLab UI Design System %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

  <style>
    :root {
      /* Sentinel-specific brand colors */
      --color-sentinel: #EA580C;
      --color-sentinel-dark: #C2410C;
      --color-sentinel-light: #FB923C;
      --color-sentinel-bg: #FFEDD5;
      --color-sentinel-bg-subtle: #FFF7ED;
    }
  </style>
</head>
<body class="h-full antialiased" style="background: var(--color-cream-50);">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex flex-col bg-white" style="border-right: 1px solid var(--color-cream-200);">
      <div class="p-5" style="border-bottom: 1px solid var(--color-cream-200);">
        <%= link_to dashboard_root_path, class: "flex items-center gap-2.5" do %>
          <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: var(--color-sentinel);">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
          </div>
          <span class="font-semibold" style="color: var(--color-ink-950);">Sentinel</span>
        <% end %>
      </div>

      <% if current_project %>
        <!-- Project Selector -->
        <div class="px-4 py-3" style="border-bottom: 1px solid var(--color-cream-200);">
          <%= link_to dashboard_root_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg transition", style: "color: var(--color-ink-700);" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: rgba(234, 88, 12, 0.15); color: var(--color-sentinel);">
              <%= current_project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate"><%= current_project.name %></span>
            <svg class="w-4 h-4" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <%= link_to dashboard_project_overview_path(current_project), class: nav_link_class('/overview') do %>
            <%= icon(:overview) %>
            Overview
          <% end %>

          <%= link_to dashboard_project_hosts_path(current_project), class: nav_link_class('/hosts') do %>
            <%= icon(:hosts) %>
            Hosts
          <% end %>

          <%= link_to dashboard_project_host_groups_path(current_project), class: nav_link_class('/host_groups') do %>
            <%= icon(:groups) %>
            Groups
          <% end %>

          <%= link_to dashboard_project_alert_rules_path(current_project), class: nav_link_class('/alert_rules') do %>
            <%= icon(:alerts) %>
            Alert Rules
          <% end %>
        </nav>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3" style="color: var(--color-ink-400);">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <div class="p-4" style="border-top: 1px solid var(--color-cream-200);">
        <div class="flex items-center gap-3">
          <div class="avatar avatar-md avatar-primary">
            <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium truncate" style="color: var(--color-ink-900);"><%= current_user.name || current_user.email.split('@').first %></p>
            <p class="text-xs truncate" style="color: var(--color-ink-500);"><%= current_user.email %></p>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto">
      <% if notice %>
        <div class="m-8 mb-0 alert alert-success">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 alert alert-error">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
