# Sentinel Environment Variables

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/sentinel_development

# Redis
REDIS_URL=redis://localhost:6379/6

# Rails
RAILS_ENV=development
SECRET_KEY_BASE=your_secret_key_base_here

# Sentinel master key for development
SENTINEL_MASTER_KEY=bl_sentinel_master_dev_key_12345

# Platform integration
BRAINZLAB_PLATFORM_URL=http://localhost:2999
SERVICE_KEY=dev_service_key

# Signal integration (for alerting)
SIGNAL_URL=http://localhost:4005
SIGNAL_MASTER_KEY=bl_signal_master_dev_key_12345

# Debug
BRAINZLAB_LOCAL_DEV=true
BRAINZLAB_DEBUG=false
